<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_flowlayout2"
        android:orientation="vertical"
        android:padding="@dimen/s10">


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s40"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/tv_msg241"
                android:textColor="@color/c_font_2"
                android:textSize="@dimen/sp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/home" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s40"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/tv_msg240"
                android:textColor="@color/c_font_2"
                android:textSize="@dimen/sp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/home" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s40"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/tv_msg242"
                android:textColor="@color/c_font_2"
                android:textSize="@dimen/sp16"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/home" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s40"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/tv_msg220"
                android:textColor="@color/c_font_2"
                android:textSize="@dimen/sp16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/home" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s40"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/tv_msg243"
                android:textColor="@color/c_font_2"
                android:textSize="@dimen/sp16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/home" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s40"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/tv_msg244"
                android:textColor="@color/c_font_2"
                android:textSize="@dimen/sp16" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s40"
        android:layout_marginTop="@dimen/s10"
        android:background="@drawable/bg_flowlayout2"
        android:orientation="horizontal"
        android:paddingTop="@dimen/s5"
        android:paddingBottom="@dimen/s5">

        <TextView
            android:id="@+id/tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/tv_msg245"
            android:textColor="@color/c_fu"></TextView>

    </LinearLayout>

</LinearLayout>