<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activity.Withdrawal.acitivity_settlement">

    <com.tianxin.widget.itembackTopbr
        android:id="@+id/itemback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/s10"
        android:paddingRight="@dimen/s10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s10"
            android:layout_marginBottom="@dimen/s10"
            android:text="真实姓名"
            android:textSize="@dimen/sp12" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s40"
            android:background="@drawable/diis_bg1"
            android:hint="真实收款姓名"
            android:paddingLeft="@dimen/s10"
            android:textSize="@dimen/sp14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s10"
            android:layout_marginBottom="@dimen/s10"
            android:text="支付宝/微信号/银行卡号"
            android:textSize="@dimen/sp12" />

        <EditText
            android:id="@+id/accounts"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s40"
            android:background="@drawable/diis_bg1"
            android:hint="结算帐号/支付宝/微信号"
            android:paddingLeft="@dimen/s10"
            android:textSize="@dimen/sp14" />

        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s200"
            android:layout_marginTop="@dimen/s20"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s45"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/s30"
            android:background="@drawable/bg_radius_bottom_pink2"
            android:gravity="center"
            android:text="上传收款码"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s50"
            android:text="温馨提示"
            android:textColor="@color/homeback" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s10"
            android:text="@string/tv_msg_tt28" />

    </LinearLayout>

</LinearLayout>