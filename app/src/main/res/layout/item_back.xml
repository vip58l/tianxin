<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/haidtop"
    android:layout_width="match_parent"
    android:layout_height="@dimen/s40"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/layoutback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_img"
            android:layout_width="@dimen/s20"
            android:layout_height="@dimen/s20"
            android:layout_gravity="center"
            android:src="@mipmap/icon_lent" />

        <TextView
            android:id="@+id/tvback"
            android:layout_width="@dimen/s40"
            android:layout_height="@dimen/s40"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="返回" />

        <TextView
            android:id="@+id/tv2title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s40"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textSize="@dimen/sp16" />

        <View
            android:layout_width="@dimen/s40"
            android:layout_height="@dimen/s40" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv3title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/s40"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/s10"
        android:gravity="center" />

    <ImageView
        android:id="@+id/sendbtn"
        android:layout_width="@dimen/s25"
        android:layout_height="@dimen/s25"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/s10"
        android:src="@mipmap/avv"
        android:visibility="gone" />

    <TextView
        android:id="@+id/sendright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/s10"
        android:background="@drawable/activity011"
        android:paddingLeft="@dimen/s15"
        android:paddingTop="@dimen/s5"
        android:paddingRight="@dimen/s15"
        android:paddingBottom="@dimen/s5"
        android:text="发布"
        android:textColor="@color/white"
        android:textSize="@dimen/sp12"
        android:visibility="gone" />

</RelativeLayout>
