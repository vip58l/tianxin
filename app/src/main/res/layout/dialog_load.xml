<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_item"
        android:orientation="vertical"
        android:paddingLeft="@dimen/s30"
        android:paddingTop="@dimen/s20"
        android:paddingRight="@dimen/s30"
        android:paddingBottom="@dimen/s20">

        <ProgressBar
            android:layout_width="@dimen/s40"
            android:layout_height="@dimen/s40"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/white">

        </ProgressBar>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s5"
            android:gravity="center"
            android:text="正在处理"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"></TextView>
    </LinearLayout>

</RelativeLayout>