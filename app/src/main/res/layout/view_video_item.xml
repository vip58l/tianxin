<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeback"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <RelativeLayout
        android:id="@+id/sRlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <!--底部背景图片-->
        <ImageView
            android:id="@+id/play_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/room_change_bg" />

        <!--播放图标UI-->
        <ImageView
            android:id="@+id/play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:alpha="0.5"
            android:src="@mipmap/icon_play_vde"
            android:visibility="gone" />

        <!--加载进度条-->
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <!--头部标题背景-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_shade_top" />

        <!--底部标题背景-->
        <ImageView
            android:id="@+id/item_dy_img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.2"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_shade_bom" />

        <!--底部标题内容-->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="35dp"
            android:text="标题名称"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/s5"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagesdeom"
                android:layout_width="@dimen/s50"
                android:layout_height="@dimen/s50"
                android:layout_gravity="clip_horizontal"
                android:layout_weight="1"
                android:src="@mipmap/ef" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/axicone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ax" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/axicone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-15dp"
                android:text="6.5w"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_jiaobiao_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/c62" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon_jiaobiao_hot"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-15dp"
                android:text="6.5w"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/vipshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cbw" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vipshow"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-15dp"
                android:text="6.5w"
                android:textColor="@color/white" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40.0dip">

        <TextView
            android:id="@+id/mtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s40"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="短视频"
            android:textColor="#fff"
            android:textSize="18.0sp" />

        <ImageView
            android:id="@+id/mhde_img_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0.0dip"
            android:padding="5.0dip"
            android:src="@mipmap/icon_tbback" />

        <ImageView
            android:id="@+id/refresh_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/y5" />

    </RelativeLayout>

</RelativeLayout>