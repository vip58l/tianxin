<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/s10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleimageview"
            android:layout_width="@dimen/s30"
            android:layout_height="@dimen/s30"
            android:layout_marginRight="@dimen/s10"
            android:src="@mipmap/icon_sex_autuor" />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/circleimageview"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="小可爱"
                    android:textSize="@dimen/sp12"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="满意"
                    android:textColor="@color/c_main"
                    android:textSize="@dimen/sp12"></TextView>
            </RelativeLayout>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s5"
                android:layout_marginBottom="@dimen/s10"
                android:text="2021-02-02 18:85:47 购买了服务"
                android:textSize="@dimen/sp12"></TextView>

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/acitvity011"
                android:orientation="horizontal"
                android:padding="@dimen/s8"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/s10"
                    android:background="@drawable/activity014"
                    android:paddingLeft="@dimen/s5"
                    android:paddingTop="@dimen/s2"
                    android:paddingRight="@dimen/s5"
                    android:paddingBottom="@dimen/s2"
                    android:text="默认"
                    android:textColor="@color/home"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="太棒了，服务很赞，倾诉体验超好。"
                    android:textColor="@color/homeback"></TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/conver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/acitvity011"
                android:padding="@dimen/s10"
                android:text="太棒了，服务很赞，倾诉体验超好。"
                android:textSize="@dimen/sp13" />

            <com.tianxin.widget.FlowLayout
                android:id="@+id/flowLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/s10"
                android:padding="@dimen/s10" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>