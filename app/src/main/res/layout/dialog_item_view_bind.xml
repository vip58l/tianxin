<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/s300"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/acitvity012"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/s10">

        <ImageView
            android:id="@+id/closeclick"
            android:layout_width="@dimen/s20"
            android:layout_height="@dimen/s20"
            android:layout_gravity="right"
            android:onClick="CloseClick"
            android:src="@mipmap/cdq" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/homeback"
            android:textSize="@dimen/sp16"
            android:text="@string/tv_msg202" />

        <EditText
            android:id="@+id/editquery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/s10"
            android:background="@drawable/acitvity015"
            android:hint="@string/tv_msg201"
            android:inputType="number"
            android:maxLength="11"
            android:padding="@dimen/s10"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/msgedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s10"
            android:layout_marginBottom="@dimen/s10"
            android:text="@string/tv_msg200"
            android:textColor="@color/homeback"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s40"
            android:layout_margin="@dimen/s10"
            android:background="@drawable/activity011"
            android:gravity="center"
            android:onClick="send"
            android:text="@string/btn_ok"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>