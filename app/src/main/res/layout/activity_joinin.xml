<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.Aboutus.activity_joinin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tianxin.widget.Backtitle
            android:id="@+id/backtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/viw002" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/s10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/s40"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dialog_a7"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/gettitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/dialog_a12"
                    android:textColor="@color/teal006" />

                <ImageView
                    android:id="@+id/imagego"
                    android:layout_width="@dimen/s15"
                    android:layout_height="@dimen/s15"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/s5"
                    android:src="@mipmap/icon_me_jiao" />

            </LinearLayout>

            <View
                style="@style/viw002"
                android:layout_marginTop="@dimen/s10"
                android:layout_marginBottom="@dimen/s10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/s5"
                android:text="@string/dialog_a8"
                android:textColor="@color/black" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editquery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/acitvity011"
                    android:gravity="top|left"
                    android:hint="@string/tm98"
                    android:maxLength="200"
                    android:maxLines="10"
                    android:minLines="8"
                    android:padding="@dimen/s10"
                    android:textSize="@dimen/sp14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/pulldele"
                    android:layout_width="@dimen/s30"
                    android:layout_height="@dimen/s30"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/s5"
                    android:alpha="0.8"
                    android:padding="@dimen/s5"
                    android:src="@mipmap/sf_icon_close_dialog_vip"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s10"
                android:layout_marginBottom="@dimen/s10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_search_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/s5"
                    android:text="@string/dialog_a9"
                    android:textColor="@color/teal006" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/s5"
                    android:gravity="bottom"
                    android:text="@string/dialog_a11"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_search_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/s5"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="0/200"
                    android:textColor="@color/teal006" />

            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/acitvity011"
                    android:digits="1234567890"
                    android:ellipsize="end"
                    android:gravity="top|left"
                    android:hint="@string/dialog_a10"
                    android:inputType="phone|number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:minLines="1"
                    android:padding="@dimen/s10"
                    android:singleLine="true"
                    android:textSize="@dimen/sp14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/pulldele1"
                    android:layout_width="@dimen/s30"
                    android:layout_height="@dimen/s30"
                    android:layout_gravity="right"
                    android:alpha="0.8"
                    android:padding="@dimen/s5"
                    android:src="@mipmap/sf_icon_close_dialog_vip"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s50"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/s50"
                android:background="@drawable/bg_radius_bottom_pink2"
                android:text="确认提交"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>