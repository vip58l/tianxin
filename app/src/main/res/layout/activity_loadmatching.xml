<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yp"
    android:fitsSystemWindows="true"
    tools:context=".activity.loadmatching.activity_Loadmatching">

    <com.moxun.tagcloudlib.view.TagCloudView
        android:id="@+id/mTagCloudView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:autoScrollMode="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radiusPercent="0.8"
        app:scrollSpeed="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/view_diagnose_radar_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="随机匹配"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/misc"
            android:layout_width="@dimen/s30"
            android:layout_height="@dimen/s30"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/s10"
            android:src="@mipmap/ms_sp_boy_sound_open"></ImageView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>