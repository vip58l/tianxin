<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/sp10">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/s80"
            android:layout_height="@dimen/s80"
            android:layout_gravity="center"
            android:background="@mipmap/cover_defult"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/sp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center|left"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="昵称"
                    android:textColor="@color/teal006"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/svip"
                    android:layout_width="@dimen/s20"
                    android:layout_height="@dimen/s20"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/s5"
                    android:layout_marginRight="@dimen/s2"
                    android:src="@mipmap/vip_active"
                    android:visibility="gone"
                   />

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/s5"
                    android:background="@drawable/activity012"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="@dimen/s10"
                    android:paddingTop="@dimen/s4"
                    android:paddingRight="@dimen/s10"
                    android:paddingBottom="@dimen/s4"
                    android:text="已认证"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/online1"
                        android:layout_width="@dimen/s8"
                        android:layout_height="@dimen/s8"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/s5"
                        android:background="@drawable/acitvity017"
                        android:padding="@dimen/s5" />

                    <TextView
                        android:id="@+id/online2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/s2"
                        android:padding="@dimen/s5"
                        android:text="在线"
                        android:textColor="#4CAF50"
                        android:textSize="@dimen/sp10"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/onecon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/s5"
                    android:background="@color/live_green_bg"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="@dimen/s10"
                    android:paddingTop="@dimen/s1"
                    android:paddingRight="@dimen/s10"
                    android:paddingBottom="@dimen/s1"
                    android:text="已认证"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/vipimg"
                    android:layout_width="@dimen/s50"
                    android:layout_height="@dimen/s20"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/s10"
                    android:src="@mipmap/akw"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/s5"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text=" 20岁 | 165cm | 网红"
                    android:textColor="@color/teal006"
                    android:textSize="11sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s1"
                android:ellipsize="end"
                android:gravity="center|left"
                android:lines="1"
                android:text="什么也没有留下"
                android:textColor="@color/divider"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/gzt"
                android:layout_width="@dimen/s60"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/s10"
                android:background="@drawable/bg_radius_bottom_pink2"
                android:gravity="center"
                android:paddingTop="@dimen/s5"
                android:paddingBottom="@dimen/s5"
                android:text="戳一下"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />

            <ImageView
                android:id="@+id/chuoyixia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/s10"
                android:gravity="center"
                android:paddingTop="@dimen/s5"
                android:paddingBottom="@dimen/s5"
                android:src="@mipmap/yoo"
                android:text="戳一下"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>