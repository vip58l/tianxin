<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/s10"
        android:layout_marginTop="@dimen/s30"
        android:layout_marginRight="@dimen/s10"
        android:background="@drawable/acitvity012"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/s120"

            android:background="@drawable/acitvity018"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/s15"
            android:gravity="center"
            android:text="发现新版本"
            android:textColor="@color/black"
            android:textSize="@dimen/sp20"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="98%的用户已升级"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/s5"
                android:maxLines="6"
                android:minLines="5"
                android:padding="@dimen/s20"
                android:text="@string/tm111" />
        </ScrollView>

        <TextView
            android:id="@+id/send"
            android:layout_width="@dimen/s200"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/s20"
            android:background="@drawable/bg_radius_bottom_pink2"
            android:gravity="center"
            android:padding="@dimen/s10"
            android:text="立即升级"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />

    </LinearLayout>

    <ImageView
        android:id="@+id/hj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/updadahj" />

</RelativeLayout>
