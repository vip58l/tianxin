<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.page2.activity.activity_page">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="@dimen/s280"
        android:layout_height="@dimen/s40"
        android:layout_marginLeft="@dimen/s30"
        android:layout_marginTop="40dp"
        android:layout_marginRight="@dimen/s30"
        android:background="@drawable/acitvity013"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/s10"
        android:paddingRight="@dimen/s10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/send1"
            style="@style/actextszb"
            android:text="主播礼物榜"></TextView>


        <TextView
            android:id="@+id/send2"
            style="@style/actextszb"
            android:text="人气TOP榜"></TextView>

        <TextView
            android:id="@+id/send3"
            style="@style/actextszb"
            android:text="房间榜"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/backleft"
        android:layout_width="@dimen/s40"
        android:layout_height="@dimen/s40"
        android:layout_marginTop="@dimen/s40"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="@dimen/s20"
            android:layout_height="@dimen/s20"
            android:layout_gravity="center"
            android:src="@mipmap/back"></ImageView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>