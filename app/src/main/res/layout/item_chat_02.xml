<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home3"
    android:padding="@dimen/s10">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/s50"
        android:layout_height="@dimen/s50"
        android:layout_alignParentRight="true"
        android:padding="@dimen/s1"
        android:src="@mipmap/icon_sex_autuor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/s10"
        android:layout_marginRight="@dimen/s10"
        android:layout_toLeftOf="@+id/icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/s5"
            android:text="名称"
            android:textColor="@color/teal006"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/acitvity019"
            android:lineSpacingExtra="@dimen/s6"
            android:padding="@dimen/s8"
            android:text="111"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

</RelativeLayout>