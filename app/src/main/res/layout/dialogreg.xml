<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/momey_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/s10">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/content"
        android:layout_width="@dimen/s80"
        android:layout_height="@dimen/s80"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/s10"
        android:src="@mipmap/ic_man_choose"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/s20"
        android:layout_marginBottom="@dimen/s20"
        android:gravity="center"
        android:padding="@dimen/s5"
        android:text="您确认要退出吗？"
        android:textColor="@color/c_font_1"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kankan"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/c_fu" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="40dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/exit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/half_transparent" />

    </LinearLayout>


</LinearLayout>


