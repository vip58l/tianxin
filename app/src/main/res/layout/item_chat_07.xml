<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home3"
    android:padding="@dimen/s10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/s40"
        android:layout_height="@dimen/s40"
        android:layout_alignParentRight="true"
        android:padding="@dimen/s1"
        android:src="@mipmap/icon_sex_autuor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/s10"
        android:layout_marginRight="@dimen/s10"
        android:layout_toLeftOf="@+id/icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/s5"
            android:text="名称"
            android:textColor="@color/teal006"
            android:textSize="@dimen/sp12" />

        <RelativeLayout
            android:id="@+id/playmp"
            android:layout_width="@dimen/s100"
            android:layout_height="@dimen/s120"
            android:padding="@dimen/s5">

            <ImageView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_welcome1" />

            <ImageView
                android:id="@+id/play"
                android:layout_width="@dimen/s30"
                android:layout_height="@dimen/s30"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_play_mp"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>