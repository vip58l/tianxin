<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimageview"
        android:layout_width="@dimen/s150"
        android:layout_height="@dimen/s150"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@mipmap/cover_defult"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"/>

    <ImageView
        android:id="@+id/play"
        android:layout_width="@dimen/s50"
        android:layout_height="@dimen/s50"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/s50"
        android:src="@mipmap/icon_play_vde"/>

</RelativeLayout>
