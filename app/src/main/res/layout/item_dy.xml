<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_dy_img_con"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s200"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bg_shade_bom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_shade_bom"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/item_dy_img_con"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/s70"
        android:background="@drawable/shape_cover_gold_background6"
        app:layout_constraintBottom_toBottomOf="@+id/item_dy_img_con"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_dy_tv_ms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:gravity="left"
        android:lines="1"
        android:paddingLeft="@dimen/s10"
        android:paddingRight="@dimen/s10"
        android:text="TITLE"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/item_dy_img_con"
        app:layout_constraintEnd_toEndOf="@+id/bg_shade_bom"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/item_dy_img_nums"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@id/item_dy_tv_nums"
        android:src="@mipmap/icon_dy_playnums"
        app:layout_constraintBottom_toBottomOf="@+id/item_dy_tv_nums"
        app:layout_constraintEnd_toStartOf="@+id/item_dy_tv_nums"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_dy_tv_nums"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/s15"
        android:layout_marginTop="@dimen/s5"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="100"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>