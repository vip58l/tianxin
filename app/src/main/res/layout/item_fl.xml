<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="@dimen/s1">

        <ImageView
            android:id="@+id/imgbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/bg_shade_bom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:alpha="0.5"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_shade_bom"></ImageView>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:text="小美"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:text="小爱"
            android:textColor="@color/white"

            />


        <TextView
            android:id="@+id/zbmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/sp10"
            android:layout_marginRight="9dp"
            android:background="@drawable/nopress_button_mc2"
            android:padding="@dimen/s5"
            android:text="直播中"
            android:textColor="@color/white"
            android:textSize="@dimen/sp10"></TextView>


    </RelativeLayout>

</LinearLayout>