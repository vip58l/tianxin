<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/acitvity012"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bgsimg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s220"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--直角背景-->
    <ImageView
        android:id="@+id/bg_shade_bom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_shade_bom"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <!--圆角-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/s70"
        android:alpha="0.5"
        android:background="@drawable/shape_cover_gold_background6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nmun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/acitvity02"
        android:paddingLeft="@dimen/s10"
        android:paddingTop="@dimen/s2"
        android:paddingRight="@dimen/s10"
        android:paddingBottom="@dimen/s2"
        android:text="8745人气"
        android:textColor="@color/white"
        android:textSize="@dimen/sp10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginRight="@dimen/s5"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:gravity="center|left"
        android:lines="2"
        android:paddingLeft="@dimen/s5"
        android:paddingRight="@dimen/s5"
        android:text="可爱的人真美别把他越推越远了！这件事一定要记住"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintStart_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimageview"
        android:layout_width="@dimen/s20"
        android:layout_height="@dimen/s20"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/a22"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="2dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="心理咨询师-雪儿"
        android:textColor="@color/white"
        android:textSize="@dimen/sp12"
        app:layout_constraintBottom_toBottomOf="@+id/circleimageview"
        app:layout_constraintStart_toEndOf="@+id/circleimageview"
        app:layout_constraintTop_toTopOf="@+id/circleimageview"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>