<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Pornhub.pornhubcomter">
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@mipmap/icon_lent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="详情"
            android:textColor="@color/half_transparent"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/showHome"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="10dp"
            android:src="@mipmap/book_directory" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/list_item_divider" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/LinearLayout_tag"
                style="@style/stylelinetop">

                <TextView
                    android:id="@+id/stitle"
                    style="@style/pornhubcomter3" />

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="信息分类:" />

                    <TextView
                        android:id="@+id/tv_type"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="所属地区:" />

                    <TextView
                        android:id="@+id/province"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="目标数量:" />

                    <TextView
                        android:id="@+id/nums"
                        style="@style/pornhubcomter2"
                        android:text="6666" />
                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="目标年龄:" />

                    <TextView
                        android:id="@+id/age"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="目标外形:" />

                    <TextView
                        android:id="@+id/quality"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="目标素质:" />

                    <TextView
                        android:id="@+id/wai"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="服务项目:" />

                    <TextView
                        android:id="@+id/project"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="价格区间:" />

                    <TextView
                        android:id="@+id/price"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="营业时间:" />

                    <TextView
                        android:id="@+id/btime"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="环境设备:" />

                    <TextView
                        android:id="@+id/ambient"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="安全评估:" />

                    <TextView
                        android:id="@+id/safe_ment"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="综合评估:" />

                    <TextView
                        android:id="@+id/risk_ment"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="信息来源:" />

                    <TextView
                        android:id="@+id/resouce"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="详细地址:" />

                    <TextView
                        android:id="@+id/address"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="联系电话:" />

                    <TextView
                        android:id="@+id/tel"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

                <LinearLayout style="@style/styleline">

                    <TextView
                        style="@style/pornhubcomter"
                        android:text="其他信息:" />

                    <TextView
                        android:id="@+id/other"
                        style="@style/pornhubcomter2"
                        android:text="6666" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>