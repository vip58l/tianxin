<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/shareqrcodes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="321dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/qrcodebg" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="252dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:src="@mipmap/wenan" />

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="198dp"
            android:layout_height="198dp"
            android:layout_below="@+id/image2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/s50"
            android:background="@drawable/acitvity012"
            android:elevation="3dp"
            android:padding="@dimen/s10">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:padding="@dimen/s1"
                android:scaleType="centerCrop" />

        </RelativeLayout>

        <TextView
            android:id="@+id/qrtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/s20"
            android:text="长按识别二维码  注册\下载"
            android:textColor="#ff666666"
            android:textSize="@dimen/sp14" />

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="@dimen/s240"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qrtext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/s10">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qrtext"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/s40"
                    android:layout_height="@dimen/s40"
                    android:src="@mipmap/pengyouquan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="分享到朋友圈"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qrtext"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/s40"
                    android:layout_height="@dimen/s40"
                    android:src="@mipmap/weixin" />


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="分享到微信"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp12" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/s40"
        android:layout_marginLeft="@dimen/s5"
        android:layout_marginTop="@dimen/s20"
        android:src="@mipmap/rtc_ic_back" />

    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/s40"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/s5"
        android:layout_marginTop="@dimen/s20"
        android:layout_marginRight="@dimen/s10"
        android:gravity="center"
        android:src="@mipmap/rtc_ic_back"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16" />

</RelativeLayout>