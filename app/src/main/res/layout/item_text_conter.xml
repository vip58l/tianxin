<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/s10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/s10"
            android:text="title"></TextView>

        <TextView
            android:id="@+id/conmp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="@color/homeback"></TextView>

        <ImageView
            android:id="@+id/imgshow"
            android:layout_width="@dimen/s20"
            android:layout_height="@dimen/s15"
            android:layout_gravity="center"
            android:rotation="180"
            android:src="@mipmap/aqh"></ImageView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>