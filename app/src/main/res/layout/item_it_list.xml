<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="@dimen/s40"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/s5">

        <View
            android:id="@+id/view1"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="@color/home3"
            android:visibility="gone"></View>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="25dp"
            android:layout_height="@dimen/s30"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="@dimen/s1"
            android:src="@mipmap/icon_sex_autuor"></ImageView>

        <View
            android:id="@+id/view2"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:layout_weight="1"
            android:background="@color/home3"
            android:visibility="gone"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/s5"
        android:layout_marginRight="@dimen/s20"
        android:layout_marginBottom="@dimen/s5"
        android:layout_toRightOf="@+id/layout"
        android:background="@drawable/acitvity011"
        android:orientation="vertical"
        android:padding="@dimen/s10">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s10"
            android:text="咨询风格"
            android:textStyle="bold"
            android:textColor="@color/homeback"
            android:textSize="@dimen/sp14"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/s6"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

</RelativeLayout>