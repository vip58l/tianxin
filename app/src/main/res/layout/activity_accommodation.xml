<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@mipmap/icon_lent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="详情"
            android:textColor="@color/half_transparent"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/showHome"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="10dp"
            android:src="@mipmap/book_directory" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/list_item_divider" />

    <com.tianxin.pullableview.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/disableHome"
        android:orientation="vertical">

        <include layout="@layout/refresh_head" />
        <!--支持所有实现Pullable接口的View -->

        <com.tianxin.pullableview.PullableListView
            android:id="@+id/pullGridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:horizontalSpacing="8.0dip"
            android:listSelector="@android:color/transparent"
            android:numColumns="2"
            android:overScrollMode="never"
            android:paddingLeft="5.0dip"
            android:paddingTop="2.0dip"
            android:paddingRight="5.0dip"
            android:scrollbars="none"
            android:scrollingCache="false"
            android:verticalSpacing="8.0dip" />

        <!-- 支持所有实现load_more接口的View -->
        <include layout="@layout/load_more" />

    </com.tianxin.pullableview.PullToRefreshLayout>

</LinearLayout>