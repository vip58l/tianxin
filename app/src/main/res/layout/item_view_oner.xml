<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/s10"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:padding="@dimen/s10">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/s100"
            android:layout_height="@dimen/s100"
            android:scaleType="centerCrop"
            android:src="@mipmap/cover_defult" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/s2"
                android:text="张英"
                android:textColor="@color/homeback"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv1"
                style="@style/actextsiz"
                android:layout_marginTop="@dimen/s2"
                android:ellipsize="end"
                android:lines="1"
                android:text="二级心理咨询师"
                android:textColor="@color/homeback" />

            <TextView
                android:id="@+id/pinglun"
                style="@style/actextsiz"
                android:text="2900条评论" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv3"
                    style="@style/actextsiz"
                    android:text="帮助4542人" />

                <TextView
                    android:id="@+id/tv4"
                    style="@style/actextsiz"
                    android:text="服务25698小时" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s5"
                android:orientation="horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥140.00元起"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/mapgps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s10"
                android:text="北京.西安"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/msg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s10"
                android:text="10Km" />

            <TextView
                android:id="@+id/msg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s10"
                android:visibility="gone" />

            <TextView
                android:id="@+id/action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/s10"
                android:background="@drawable/bg_radius_bottom_pink2"
                android:gravity="right"
                android:paddingLeft="@dimen/s10"
                android:paddingTop="@dimen/s5"
                android:paddingRight="@dimen/s10"
                android:paddingBottom="@dimen/s5"
                android:text="私聊"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>