<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/s10"
        android:background="@color/white"
        android:padding="@dimen/s8">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/s30"
            android:layout_height="@dimen/s30"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/s10"
            android:layout_toRightOf="@+id/icon"
            android:text="看一看"
            android:textColor="@color/homeback"
            android:textSize="@dimen/sp14" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/s40"
            android:layout_height="@dimen/s40"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/s10"
            android:layout_toLeftOf="@+id/msgtext"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

        <TextView
            android:id="@+id/msgtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/s10"
            android:layout_toLeftOf="@+id/back"
            android:text="点赞"
            android:textSize="@dimen/sp12"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/s20"
            android:layout_height="@dimen/s20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/s4"
            android:src="@mipmap/icon_me_jiao" />

    </RelativeLayout>


</LinearLayout>