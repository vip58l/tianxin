<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/live_giftrank_headerview"/>

        <com.tianxin.pullableview.PullToRefreshLayout
            android:id="@+id/swiprefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/titleconte">

            <include layout="@layout/refresh_head" />

            <com.tianxin.pullableview.PullableListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include layout="@layout/load_more" />

        </com.tianxin.pullableview.PullToRefreshLayout>

        <include layout="@layout/layout_img_eoerr" />
    </LinearLayout>

</LinearLayout>
