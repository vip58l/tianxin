<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bootNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/s5"
        android:paddingBottom="@dimen/s2">

        <LinearLayout
            android:id="@+id/lin_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img1"
                style="@style/layoutwh"
                android:src="@mipmap/a_" />

            <TextView
                android:id="@+id/tv_1"
                style="@style/indexamin"
                android:text="@string/home1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/img2"
                style="@style/layoutwh"
                android:src="@mipmap/a_n" />

            <TextView
                android:id="@+id/tv_2"
                style="@style/indexamin"
                android:layout_height="wrap_content"
                android:text="@string/home2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img3"
                style="@style/layoutwh"
                android:src="@mipmap/a_b" />

            <TextView
                android:id="@+id/tv_3"
                style="@style/indexamin"
                android:text="@string/tv_msg61" />

        </LinearLayout>

        <com.tianxin.widget.homefooter
            android:id="@+id/home6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:home_name="短视频"
            app:home_src="@mipmap/a_f" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/lin_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img4"
                    style="@style/layoutwh"
                    android:src="@mipmap/a_j" />

                <TextView
                    android:id="@+id/tv_4"
                    style="@style/indexamin"
                    android:text="@string/home4" />

            </LinearLayout>

            <com.tencent.qcloud.tim.uikit.component.UnreadCountTextView
                android:id="@+id/total_unread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/s15"
                android:gravity="center"
                android:includeFontPadding="false"
                android:minWidth="18.4dp"
                android:minHeight="18.4dp"
                android:text="99"
                android:textColor="#000000"
                android:textSize="@dimen/sp12"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img5"
                style="@style/layoutwh"
                android:src="@mipmap/a_h" />

            <TextView
                android:id="@+id/tv_5"
                style="@style/indexamin"
                android:text="@string/home5" />
        </LinearLayout>

    </LinearLayout>

    <!--底部导航-->
    <include
        layout="@layout/footer"
        android:visibility="gone" />

</FrameLayout>