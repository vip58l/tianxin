<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadeScrollbars="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/s10"
        android:paddingBottom="@dimen/s10">

        <!--        android:rotation="360" 设置显示方向-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/s40"
            android:layout_height="@dimen/s40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sp10"
            android:layout_marginRight="@dimen/s10"
            android:alpha="0.4"
            android:rotation="360"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/s5"
            android:layout_toLeftOf="@+id/layoutcc"
            android:layout_toRightOf="@+id/icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:text="@string/title_activity_rtmp_room_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s5"
                android:layout_toRightOf="@+id/icon"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/homeback"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s20"
                android:layout_below="@+id/tv1"
                android:layout_marginTop="@dimen/s5"
                android:layout_toRightOf="@+id/icon"
                android:ellipsize="end"
                android:lines="1"
                android:text="111"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/sp10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time"
                android:text="11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/divider"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/count"
                android:layout_width="@dimen/s20"
                android:layout_height="@dimen/s20"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/sp10"
                android:background="@drawable/bg_jianbian_yuanjiao"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="1"
                android:textColor="@color/home3"
                android:textSize="@dimen/sp10" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>